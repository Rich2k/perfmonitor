{% extends "MoschiniPerfToolBundle::layout.html.twig" %}
{% block title 'Histogram' %}

{% block javascripts %}
<script src="{{ asset('js/d3.v3.min.js') }}"></script>
<script src="{{ asset('js/histogram-simple.js') }}"></script>
<script type="text/javascript">
{% for key, times in datas %}
    loadHistogramSimple({{ times|json_encode }}, 'div-hist-{{ key }}');
{% endfor %}

    $(function(){
        $('#menu-nav a[href="{{ path('moschini_perftool_default_graph', {'site': app.request.get('site')}) }}"]').parent().addClass('active');
    });
</script>
{% render url('moschini_perftool_sites_js', {'site': app.request.get('site'), 'url': app.request.get('url')}) %}
{% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/graph.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block content %}

{% render url('moschini_perftool_sites_sites') %}

{% for key, times in datas %}
	<div id="div-hist-{{ key }}">
		<h1>
		<a href="">{{ urls[key].getHost }}{{ urls[key].getPath }}</a>
		</h1>
	</div>

{% endfor %}

{% endblock %}
