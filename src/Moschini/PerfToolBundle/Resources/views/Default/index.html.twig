
{% extends "MoschiniPerfToolBundle::layout.html.twig" %}
{% block title 'Requests' %}
{% block content %}

<a class="btn pull-right" href="{{ path('moschini_perftool_default_send') }}">Create new</a>

{% include "MoschiniPerfToolBundle::sites.html.twig" %}


{% if files|length > 0 %}
<table class="table table-condensed" style="width:300px;">
<thead>
    <tr>
        <th>Date</th>
        <th>Url</th>
    </tr>
</thead>
<tbody>
{% for id, file in files %}

    <tr>
        <td>{{ file.getDate.format('Y-m-d') }}</td>
        <td>
<a href="{{ path('moschini_perftool_default_harviewer', {'id':id}) }}">{{ file.getUrl }}</a>
        </td>
    </tr>
{% endfor %}
</tbody>
</table>
{% endif %}



{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#menu-nav a[href="{{ path('moschini_perftool_default_index') }}"]').parent().addClass('active');
        });
    </script>
{% endblock %}
