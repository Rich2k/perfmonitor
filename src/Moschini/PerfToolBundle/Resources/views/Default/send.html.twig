{% extends "MoschiniPerfToolBundle::layout.html.twig" %}
{% block title 'Create new request' %}

{% block content %}

<form action="{{ path('moschini_perftool_default_send', {'site': app.request.get('site')}) }}" method="post" {{ form_enctype(form) }}>
{{ form_widget(form) }}
<br />
<button type="submit" class="btn btn-primary">Submit</button>
</form>

{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#menu-nav a[href="{{ path('moschini_perftool_default_index', {'site': app.request.get('site')}) }}"]').parent().addClass('active');
        });
    </script>
{% endblock %}
