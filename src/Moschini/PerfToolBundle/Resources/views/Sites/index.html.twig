{% extends "MoschiniPerfToolBundle::layout.html.twig" %}
{% block title 'Monitoring' %}

{% block content %}

<a class="btn pull-right" href="{{ path('moschini_perftool_sites_add', {'site': app.request.get('site')}) }}">Add site</a>

<table class="table">
    <thead>
    <tr>
        <th>Site</th>
        <th>Interval</th>
        <th># Urls</th>
    </tr>
    </thead>
    <tbody>
    {% for site in sites %}
    <tr>
        <td>
            <a href="{{ path('moschini_perftool_sites_edit', {'site': app.request.get('site'), 'id': attribute(site['_id'], '$id') }) }}">{{ site['site'] }}</a>
        </td>
        <td>
            {{ site['interval'] }}
        </td>
        <td>
            {{ site['urls']|length }}
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}

{% block javascripts %}
    <script>
        $(function(){
            $('#menu-nav a[href="{{ path('moschini_perftool_sites_index', {'site': app.request.get('site')}) }}"]').parent().addClass('active');
        });
    </script>
{% endblock %}
